@model Eventurely.Web.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container py-5">
    <h1>Delete Event</h1>   

    <div class="card shadow-sm">
        <div class="card-body">
            <h4>Are you sure you want to delete this event?</h4>
            <dl class="row">
                <dt class="col-sm-3">Event Name</dt>
                <dd class="col-sm-9">@Model.Title</dd>
                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("MM/dd/yyyy")</dd>
                <dt class="col-sm-3">Venue</dt>
                <dd class="col-sm-9">@Model.Venue</dd>
            </dl>

            <form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
        </div>
    </div>
</div>
