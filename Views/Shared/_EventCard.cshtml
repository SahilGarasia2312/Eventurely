@model Eventurely.Web.Models.Event

<div class="card h-100 shadow-sm">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="/images/events/@Model.ImagePath" class="card-img-top" alt="@Model.Title" style="height: 200px; object-fit: cover;">
    }
    else
    {
        <img src="/images/default-event.jpg" class="card-img-top" alt="Default Event Image" style="height: 200px; object-fit: cover;">
    }
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">
            <i class="bi bi-calendar-event me-2"></i> @Model.Date.ToString("MMM dd, yyyy h:mm tt")<br />
            <i class="bi bi-geo-alt me-2"></i> @Model.Venue
        </p>
        <a asp-action="Details" asp-controller="Event" asp-route-id="@Model.Id" class="btn btn-primary">View Details</a>
    </div>
</div>