@model Eventurely.Models.ViewModels.HomeViewModel
@using System.Linq

@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Ghibli-Inspired AI-Generated Background -->
<section class="hero-section position-relative text-white py-6">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6" data-aos="fade-right" data-aos-duration="1200">
                <h1 class="display-3 fw-bold mb-4">Create Unforgettable Events</h1>
                <p class="lead mb-4">Effortlessly plan, manage, and analyze events with Eventurely. Generate badges and gain real-time insights in minutes.</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Event" asp-action="Index" class="btn btn-primary btn-lg glow-btn">Explore Events</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">Get Started</a>
                </div>
            </div>
        </div>
    </div>
    <div class="custom-shape-divider-bottom">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25"></path>
            <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5"></path>
            <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"></path>
        </svg>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-6">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold" data-aos="fade-up">Why Choose Eventurely?</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card h-100 shadow-sm border-0 feature-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3 animate-pulse">
                            <i class="bi bi-calendar-event fs-4"></i>
                        </div>
                        <h5 class="card-title fw-bold">Effortless Event Creation</h5>
                        <p class="card-text text-muted">Set up events in minutes with our intuitive interface. Customize every detail to match your vision.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card h-100 shadow-sm border-0 feature-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success bg-gradient text-white rounded-circle mb-3 animate-pulse">
                            <i class="bi bi-qr-code fs-4"></i>
                        </div>
                        <h5 class="card-title fw-bold">Instant Badge Generation</h5>
                        <p class="card-text text-muted">Create professional badges instantly for attendees. Download or print with ease.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="card h-100 shadow-sm border-0 feature-card">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info bg-gradient text-white rounded-circle mb-3 animate-pulse">
                            <i class="bi bi-graph-up fs-4"></i>
                        </div>
                        <h5 class="card-title fw-bold">Powerful Analytics</h5>
                        <p class="card-text text-muted">Track registrations, attendance, and engagement with real-time insights.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Events Section -->
<section class="events-section py-6">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="fw-bold" data-aos="fade-right">Upcoming Events</h2>
            <a asp-controller="Event" asp-action="Index" class="btn btn-outline-primary glow-btn" data-aos="fade-left">View All</a>
        </div>
        <div class="row g-4">
            @if (Model?.FeaturedEvents?.Any() == true)
            {
                @foreach (var evt in Model.FeaturedEvents)
                {
                    <div class="col-md-4" data-aos="zoom-in" data-aos-delay="100">
                        <partial name="_EventCard" model="evt" />
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5" data-aos="fade-up">
                    <p class="lead text-muted">No upcoming events yet. Stay tuned for exciting experiences!</p>
                    <a asp-controller="Event" asp-action="Index" class="btn btn-primary mt-3 glow-btn">Explore Events</a>
                </div>
            }
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials-section py-6 bg-light">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold" data-aos="fade-up">What Our Organizers Say</h2>
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="testimonial-item text-center p-4">
                                <img src="~/images/testimonial-1-ai.jpg" class="rounded-circle mb-3 animate-pulse" width="100" height="100" alt="sahil Garasia">
                                <h5 class="fw-bold">sahil Garasia</h5>
                                <p class="text-muted">Event Organizer</p>
                                <p class="testimonial-text">"Eventurely made our conference a breeze. The badge generation is a game-changer!"</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="testimonial-item text-center p-4">
                                <img src="~/images/testimonial-2-ai.jpg" class="rounded-circle mb-3 animate-pulse" width="100" height="100" alt="Vikram">
                                <h5 class="fw-bold">Vikram</h5>
                                <p class="text-muted">Conference Manager</p>
                                <p class="testimonial-text">"The real-time analytics helped us optimize our events and engage our audience better."</p>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev" aria-label="Previous testimonial">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next" aria-label="Next testimonial">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            easing: 'ease-in-out',
            once: true
        });
    </script>
}